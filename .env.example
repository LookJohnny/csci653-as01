# DarkHorse Environment Configuration
# Copy this file to .env and customize for your environment

# System Settings
DARKHORSE_DEVICE=cuda  # or cpu
DARKHORSE_SEED=2025
DARKHORSE_LOG_LEVEL=INFO

# Data Paths
DARKHORSE_INPUT_DIR=data/raw
DARKHORSE_OUTPUT_DIR=data/processed

# Transformer Training
DARKHORSE_TRANSFORMER_EPOCHS=10
DARKHORSE_TRANSFORMER_LR=0.001
DARKHORSE_TRANSFORMER_BATCH_SIZE=256

# Forecasting
DARKHORSE_FORECAST_HORIZON=12
DARKHORSE_FORECAST_EPOCHS=30
DARKHORSE_FORECAST_BATCH_SIZE=128

# Load Balancer
DARKHORSE_API_HOST=0.0.0.0
DARKHORSE_API_PORT=8000

# AWS/Cloud (if using cloud storage)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_DEFAULT_REGION=us-east-1

# Database (if using persistent storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/darkhorse